<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h4>Form Ubah Contact</h4>
      <form method="post" action="/update">
        <input
          type="hidden"
          name="oldNama"
          value="<%= contact.oldNama || contact.nama %>"
        />
        <% if (typeof errors != 'undefined') { %>
        <div class="alert alert-danger" role="alert">
          <ul>
            <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
            <% }) %>
          </ul>
        </div>
        <% } %>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Nama</label>
          <input
            type="text"
            class="form-control"
            id="nama"
            name="nama"
            required
            value="<%= contact.nama %>"
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            required
            value="<%= contact.email %>"
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Nomor HP</label>
          <input
            type="text"
            class="form-control"
            id="nohp"
            name="nohp"
            required
            value="<%= contact.nohp %>"
          />
        </div>

        <button type="submit" class="btn btn-primary">Ubah Data Contact</button>
      </form>
    </div>
  </div>
</div>
