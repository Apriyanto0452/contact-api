<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h1>List Contact</h1>
      <a href="/add" class="btn btn-primary mb-2">Tambah Contact</a>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nama</th>
            <th scope="col">Email</th>
            <th scope="col">Info</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length === 0) { %>
          <tr>
            <td colspan="4">
              <div class="alert alert-danger fw-bold" role="alert">
                Data contact masih kosong
              </div>
            </td>
          </tr>

          <% } %> <% contacts.forEach((contact, i) => { i++ %>
          <tr>
            <th scope="row"><%= i++ %></th>
            <td><%= contact.nama %></td>
            <td><%= contact.email %></td>
            <td>
              <a
                href="/<%= contact.nama %>"
                class="btn btn-success badge rounded-pill"
              >
                <i class="bi bi-info-circle"></i> detail</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
